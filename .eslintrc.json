{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint",
    "@stylistic"
  ],
  "rules": {
    "no-case-declarations": "off",
    "eol-last": "warn",
    "no-unused-vars": "off",
    "no-trailing-spaces": "warn",
    "no-unused-expressions": "warn",
    "@stylistic/comma-dangle": ["warn", "always-multiline"],
    "semi": "warn",
    "yoda": "warn"
  }
}
